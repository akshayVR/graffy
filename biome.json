{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": ["dist", "ref", "pages", ".vscode"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noDelete": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "a11y": {
        "all": false,
        "useButtonType": { "level": "off" }
      },
      "style": {
        "noParameterAssign": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
